<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet id="change_data_column" author="pawel" dbms="postgresql">
        <sql>
            alter table documentcontent rename column data to lo_data;
            alter table documentcontent add column data bytea;
        </sql>
    </changeSet>
    <changeSet id="RDM-2991-migration-audit" author="WaiHung.Cho@HMCTS.NET" dbms="postgresql">
        <createTable tableName="batch_migration_audit_entry">
            <column name="id" type="serial PRIMARY KEY">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="started" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="modified" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="status_report" type="text"/>
            <column name="migration_key" type="text"/>
            <column name="batch_size" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="mock_run" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="rdm-2828-migration-checksum" author="WaiHung.Cho@HMCTS.NET" dbms="postgresql">
        <!-- Add new content_checksum field to the documentcontentversion table -->
        <addColumn tableName="documentcontentversion">
            <column name="content_checksum" type="text" />
        </addColumn>
    </changeSet>
    <changeSet id="rdm-2828" author="fatih.ozceylan@hmcts.net" dbms="postgresql">
        <!-- Add new content_uri field to the documentcontentversion table -->
        <addColumn tableName="documentcontentversion">
            <column name="content_uri" type="varchar(512)" />
        </addColumn>
    </changeSet>
</databaseChangeLog>
