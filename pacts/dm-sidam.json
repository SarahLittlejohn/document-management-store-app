{
  "provider": {
    "name": "sidam"
  },
  "consumer": {
    "name": "dm"
  },
  "interactions": [
    {
      "description": "0. Incorrect Authorization header",
      "request": {
        "method": "GET",
        "path": "/details",
        "headers": {
          "Authorization": "x"
        }
      },
      "response": {
        "status": 403
      },
      "providerStates": [
        {
          "name": "provider returns a SIDAM user for a valid token"
        }
      ]
    },
    {
      "description": "1. Valid auth token",
      "request": {
        "method": "GET",
        "path": "/details",
        "headers": {
          "Authorization": "Uo0.R82x.yO"
        },
        "matchingRules": {
          "header": {
            "Authorization": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "(([a-z]|[A-Z]|[0-9])+)\\.(([a-z]|[A-Z]|[0-9])+)\\.(([a-z]|[A-Z]|[0-9])+)"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "response": {
        "status": 201,
        "headers": {
          "Content-Type": "application/json; charset\u003dUTF-8"
        },
        "body": {
          "roles": [
            "CASEWORKER",
            "CASEWORKER"
          ],
          "id": 42
        },
        "matchingRules": {
          "body": {
            "$.id": {
              "matchers": [
                {
                  "match": "integer"
                }
              ],
              "combine": "AND"
            },
            "$.roles": {
              "matchers": [
                {
                  "match": "type",
                  "min": 1
                }
              ],
              "combine": "AND"
            },
            "$.roles[*]": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "CASEWORKER"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset\u003d[\\w\\-]+)?"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "provider returns a SIDAM user for a valid token"
        }
      ]
    },
    {
      "description": "2. No auth token",
      "request": {
        "method": "GET",
        "path": "/details"
      },
      "response": {
        "status": 403
      },
      "providerStates": [
        {
          "name": "provider returns a SIDAM user for a valid token"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "3.6.10"
    }
  }
}